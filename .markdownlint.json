{
   "default": true,
   "heading-style": {
      "style": "atx"
   },
   "ul-style": {
      "style": "asterisk"
   },
   "ul-start-left": false,
   "ul-indent": {
      "indent": 3,
      "start_indented": true
   },
   "no-multiple-blanks": { "maximum": 2 },
   "line-length": {
      "line_length": 90,
      "code_block_line_length": 140
   },
   "no-duplicate-header": {
      "allow_different_nesting": true
   },
   "no-trailing-punctuation":{
      "punctuation":  ".,;:"
   },
   "hr-style": { "style": "---" },
   "no-emphasis-as-heading": false,
   "no-empty-links": false,
   "no-alt-text": false,
   "code-block-style": { "style": "fenced" },
   "code-fence-style": { "style": "backtick" },
   "no-inline-html": false
}
